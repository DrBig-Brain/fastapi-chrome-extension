{
  "manifest_version": 3,
  "name": "Video Chat Assistant",
  "version": "1.0",
  "description": "AI chatbot for video content",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://vimeo.com/*", "*://*/*"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
