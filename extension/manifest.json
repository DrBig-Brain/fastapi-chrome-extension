{
  "manifest_version": 3,
  "name": "inSPECt - Video Chat Assistant",
  "version": "1.0",
  "description": "AI chatbot for video content using Gemini API",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://vimeo.com/*", "*://*/*"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/spec_logo.png", "settings.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
